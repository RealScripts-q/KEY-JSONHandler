----------------------------------------------------
-- HELPERS
----------------------------------------------------

local function notify(txt)
	StarterGui:SetCore("SendNotification", {
		Title = "RSQ",
		Text = txt,
		Duration = 4
	})
end

----------------------------------------------------
-- FETCH KEYS (HTML-COMPATIBLE)
----------------------------------------------------

local function fetchKeys()
	local raw
	local ok, err = pcall(function()
		raw = game:HttpGet(JSONBIN_URL)
	end)

	if not ok then
		warn("HTTP ERROR:", err)
		return nil
	end

	local decoded = HttpService:JSONDecode(raw)

	if not decoded
		or not decoded.record
		or not decoded.record.keys then
		warn("INVALID JSON STRUCTURE")
		return nil
	end

	-- DEBUG
	print("üîç KEYS FROM JSONBIN ‚Üì")
	print(HttpService:JSONEncode(decoded.record.keys))

	return decoded.record.keys
end

----------------------------------------------------
-- VALIDATE
----------------------------------------------------

local function validateKey(key)
	local keys = fetchKeys()
	if not keys then
		return false, "Database error"
	end

	local entry = keys[key]
	if not entry then
		return false, "Invalid key"
	end

	if tonumber(entry.userId) ~= PLAYER.UserId then
		return false, "Wrong user"
	end

	if tonumber(entry.expires) < os.time() then
		return false, "Expired"
	end

	if entry.hwid and entry.hwid ~= HWID then
		return false, "HWID mismatch"
	end

	return true, entry
end

----------------------------------------------------
-- SUBMIT
----------------------------------------------------

submit.MouseButton1Click:Connect(function()
	local key = input.Text:gsub("%s+", "")
	if key == "" then return end

	submit.Text = "VERIFYING..."

	local ok, data = validateKey(key)

	if not ok then
		submit.Text = "INVALID"
		submit.BackgroundColor3 = Color3.fromRGB(180, 0, 0)
		task.wait(1.2)
		submit.Text = "VERIFY"
		submit.BackgroundColor3 = Color3.fromRGB(0, 120, 215)
		return
	end

	submit.Text = "ACCESS GRANTED"
	submit.BackgroundColor3 = Color3.fromRGB(0, 180, 90)

	notify("Key valid")

	task.wait(0.6)
	gui:Destroy()

	loadstring(game:HttpGet(SCRIPT_URL))()
end)
