local function makeBtn(text,color)
	local b = Instance.new("TextButton")
	b.Size = UDim2.fromOffset(110,34)
	b.Text = text
	b.Font = Enum.Font.GothamBold
	b.TextSize = 12
	b.TextColor3 = Color3.new(1,1,1)
	b.BackgroundColor3 = color
	b.BorderSizePixel = 0
	Instance.new("UICorner", b).CornerRadius = UDim.new(0,10)
	b.Parent = btnRow
	return b
end

local exitBtn   = makeBtn("âŸµ Exit", Color3.fromRGB(45,45,45))
local getKeyBtn = makeBtn("ðŸ”— Get key", Color3.fromRGB(60,60,60))
local submitBtn = makeBtn("Submit", Color3.fromRGB(0,120,215))

----------------------------------------------------
-- SPINNER
----------------------------------------------------
local spinner = Instance.new("ImageLabel", main)
spinner.Size = UDim2.fromOffset(22,22)
spinner.Position = UDim2.fromScale(0.5,0.5)
spinner.AnchorPoint = Vector2.new(0.5,0.5)
spinner.Image = "rbxassetid://8131544337"
spinner.BackgroundTransparency = 1
spinner.Visible = false

local spinTween
local function startSpin()
	spinner.Visible = true
	spinTween = TweenService:Create(
		spinner,
		TweenInfo.new(0.8,Enum.EasingStyle.Linear,Enum.EasingDirection.In,-1),
		{Rotation = 360}
	)
	spinTween:Play()
end

local function stopSpin()
	if spinTween then spinTween:Cancel() end
	spinner.Visible = false
	spinner.Rotation = 0
end

----------------------------------------------------
-- KEY VALIDATION
----------------------------------------------------
local function validateKey(key)
	local data = HttpService:JSONDecode(game:HttpGet(KEY_DB_URL))
	local entry = data.record.keys[key]

	if not entry then
		return false, "Invalid key"
	end

	if entry.userId ~= PLAYER.UserId then
		return false, "Key not for this user"
	end

	if os.time() > entry.expires then
		return false, "Key expired"
	end

	return true
end

----------------------------------------------------
-- BUTTON LOGIC
----------------------------------------------------
submitBtn.MouseButton1Click:Connect(function()
	local key = input.Text:gsub("%s+","")
	if key == "" then return end

	submitBtn.Text = "Verifyingâ€¦"
	submitBtn.BackgroundColor3 = Color3.fromRGB(120,120,120)
	startSpin()

	task.wait(1)

	local ok, err = validateKey(key)
	if not ok then
		stopSpin()
		submitBtn.Text = err
		submitBtn.BackgroundColor3 = Color3.fromRGB(180,0,0)
		task.wait(1.5)
		submitBtn.Text = "Submit"
		submitBtn.BackgroundColor3 = Color3.fromRGB(0,120,215)
		return
	end

	stopSpin()
	submitBtn.Text = "KEY VALIDATED"
	submitBtn.BackgroundColor3 = Color3.fromRGB(0,180,0)
	task.wait(0.6)

	gui:Destroy()
	blur:Destroy()
	loadstring(game:HttpGet(MAIN_SCRIPT_URL))()
end)

getKeyBtn.MouseButton1Click:Connect(function()
	setclipboard(KEY_WEBSITE)
end)

exitBtn.MouseButton1Click:Connect(function()
	gui:Destroy()
	blur:Destroy()
end)
